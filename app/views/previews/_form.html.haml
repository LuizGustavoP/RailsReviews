= form_for @preview do |f|
  - if @preview.errors.any?
    #error_explanation
      %h2= "#{pluralize(@preview.errors.count, "error")} prohibited this preview from being saved:"
      %ul
        - @preview.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :score
    = f.text_field :score
  .field
    = f.label :review
    = f.text_field :review
  .field
    = f.hidden_field :game_id, :value => @id
  .field
    = f.hidden_field :userid, :value => current_user.id
  .actions
    = f.submit 'Save'
