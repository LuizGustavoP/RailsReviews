%h1 Listing publishers

%table
  %thead
    %tr
      %th Nome
      %th Descr
      %th
      %th
      %th

  %tbody
    - @publishers.each do |publisher|
      %tr
        %td= publisher.nome
        %td= publisher.descr
        %td= link_to 'Show', publisher
        -if current_user.admin?
          %td= link_to 'Edit', edit_publisher_path(publisher)
          %td= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' }

%br
-if current_user.admin?
  = link_to 'New Publisher', new_publisher_path
